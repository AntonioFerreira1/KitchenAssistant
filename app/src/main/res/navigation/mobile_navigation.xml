<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.kitchenassistant.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_myRecipes"
        android:name="com.example.kitchenassistant.ui.myRecipes.MyRecipesFragment"
        android:label="@string/title_myRecipes"
        tools:layout="@layout/fragment_my_products" />

    <fragment
        android:id="@id/navigation_myProducts"
        android:name="com.example.kitchenassistant.ui.myProducts.MyProductsFragment"
        android:label="@string/title_myProducts"
        tools:layout="@layout/fragment_account"/>

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.kitchenassistant.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_my_recipes" />

</navigation>